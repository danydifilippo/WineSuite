

@{
    ViewBag.Title = "Events";

}
<style>

    h1 {
        margin-bottom: 0;
        font-size: 38px;
    }

    .h1Events {
        color: #244450;
        padding: 20px;
        font-family: 'Mulish', sans-serif;
        text-align: center;
    }

    .mese {
        font-size: 0.8em;
        color: #244450;
    }
    .events-img {
        background-image: url('/Content/img/ev_schem(1).png');
        background-size: 55%;
        background-repeat: no-repeat;
        text-align: center;
        cursor: pointer;
    }

    .divDescr {
        width: 60%;
        background-color: #f0f8ffd9;
        border-radius: 14px;
        margin: 10px;
        padding-block: 1em;
        align-self: center;
    }
    .number {
        font-size: 3.5em;
        margin-block-start: 0.78em;
        color: #244450;
        line-height: 15px;
    }

    .cropped {
        overflow: hidden;
        height: 180px;
        width: 154px;
        border-radius: 0 0 3cm 3cm;
        text-align: center;
    }

    .cropEmptySx {
        width: 84px;
        border-right: 10px solid #ff0000;
        border-radius: 0;
        border-bottom: 5px solid #ff0000;
    }

    .cropEmptyDx {
        width: 84px;
        border-left: 10px solid #ff0000;
        border-radius: 0;
        border-bottom: 5px solid #ff0000;
    }

    .parEv {
        font-size: 12px;
        font-style: italic;
        margin-bottom: -12px;
        padding-inline-start: 2em;
        color: #ff0000;
    }
</style>



