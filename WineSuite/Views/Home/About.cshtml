<script type="text/javascript">
    $(document).ready(function () {
        $(".start-50").click(function () {
            var video = $(this).attr("id");
            var srcBase = "/Content/video/";
            $("iframe").attr("src", srcBase + video + "?autoplay=1")
        })
        $(".xclose").click(function () {
            $("iframe").prop("src", "")
        })
        $("#toggler").click(function () {
            $("#selezione").toggleClass("theme-dark");
            $("#selezione").toggleClass("theme-light");
            $("#visualLight").toggleClass("scene2");
            $(this).toggleClass("togLight");
            $(this).toggleClass("togDark");
            $(".white").toggleClass("d-none")
            $(".black").toggleClass("d-none")
        })

    })

</script>