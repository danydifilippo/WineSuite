@model IEnumerable<WineSuite.Models.Eventi>

<section class="container-fluid tableBack">
    <div class="container">
        <h2 style="color: #4ba4e7">Elenco Eventi e Degustazioni</h2>
        <p>
            @Html.ActionLink("+ Inserisci un nuovo Evento", "Create", "Eventi")
        </p>
        <table class="table">
            <tr style="color: #4ba4e7">
                <th>
                    @Html.DisplayNameFor(model => model.Titolo)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.TotPaxPrenotate)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.TotPaxArrivate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotContanti)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotPos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotPagato)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titolo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.TotPaxPrenotate)
                    </td>
                    <td class="text-center ">
                        @Html.DisplayFor(modelItem => item.TotPaxArrivate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotContanti) €
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotPos) €
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotPagato) €
                    </td>
                    <td>
                        @Html.ActionLink("Gestisci Prenotazioni >>>", "ManageBooking", new { id = item.IdEvento})
                    </td>
                </tr>
            }

        </table>
    </div>
</section>