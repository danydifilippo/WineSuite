@model WineSuite.Models.Tariffe


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal row FormData">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Tariffa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @{Html.EnableClientValidation(false);}
                @Html.EditorFor(model => model.Tariffa, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @{Html.EnableClientValidation(true);}
                @*@Html.ValidationMessageFor(model => model.Tariffa, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DescrTariffa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.DescrTariffa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescrTariffa, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 mt-3 fw-bold">
                <btn class="btn btn-outline-info btnSave">SALVA TARIFFA</btn>
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(document).ready(function () {
      
        $('.btnSave').click(function () {
            var nr = $("input[type=number][name=Tariffa]").val();
            var descr = $("input[type=text][name=DescrTariffa]").val();
            $.ajax({
                url: '/Tariffe/CreateNewPrice',
                method: "POST",
                data: { 'Tariffa': nr, 'DescrTariffa': descr },
                success: function (t) {
                    $(".tariffeIndex").append("<input class=\"col-10\" readonly name=\"Tar" + t.IdTariffa + "\" value=\"" + t.Tariffa + " € - " + t.DescrTariffa + "\"/>" +
                        "<btn type=\"button\" id=\"" + t.IdTariffa + "\" class=\"trash\"><i class=\"bi bi-trash\"></i></btn>")
                    $("#" + t.IdTariffa + "").click(function () {
                        $(this).parent(".tariffeIndex").children("input[name=Tar" + t.IdTariffa + "]").remove();
                        $(this).remove();
                    })
                },
            });
        });
    })
</script>
